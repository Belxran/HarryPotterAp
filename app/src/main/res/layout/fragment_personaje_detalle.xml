<!-- fragment_personaje_detalle.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen del personaje a la izquierda -->

        <!-- Detalles del personaje a la derecha -->
        <ImageView
            android:id="@+id/imageViewPersonaje"
            android:layout_width="72dp"
            android:layout_height="245dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Personaje"
                android:textSize="20sp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textViewApodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apodo del Personaje"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textViewCasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Casa de Hogwarts"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textViewBirthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Nacimiento"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textViewDescendencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descendencia"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
